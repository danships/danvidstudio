{
  "name": "danvidstudio",
  "version": "0.0.1",
  "type": "module",
  "main": "out/danvidstudio.js",
  "types": "out/index.d.ts",
  "license": "MPL-2.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "lint": "concurrently --kill-others-on-fail \"npm:lint:*\"",
    "lint:prettier": "prettier --check --log-level=warn src tests",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint --ext=js,jsx,ts,tsx --max-warnings=0 src tests",
    "format": "prettier --write src tests && eslint --ext=js,jsx,ts,tsx --fix src tests",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:manual": "MANUAL_TEST=true vite",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "prettier": "eslint-config-daangemist/.prettierrc",
  "lint-staged": {
    "!(*config|demo).ts": [
      "eslint --max-warnings 0 --no-ignore",
      "sh -c 'tsc -p tsconfig.json --noEmit'",
      "prettier --check --log-level=warn"
    ],
    "!(*config).(js|cjs|mjs)": [
      "eslint --max-warnings 0 --no-ignore",
      "prettier --check --log-level=warn"
    ],
    "*.(json|md)": [
      "prettier --check --loglevel=warn"
    ]
  },
  "dependencies": {
    "mp4-muxer": "^5.2.0",
    "pixi.js": "^8.7.3",
    "webm-muxer": "^5.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@testing-library/dom": "^10.4.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-daangemist": "^1.2.2",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "typescript": "^5.7.3",
    "vite": "^5.1.1",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^3.0.5"
  }
}

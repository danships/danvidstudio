{
  "extends": ["@tsconfig/strictest"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["node"],
    "outDir": "out",
    "declaration": true,
    "declarationDir": "out",
    "noImplicitOverride": false // With it, we cannot have VisualClip function overriden in specific clips, without also adding them to Clip, which makes no sense.
  },
  "include": ["src"]
}
